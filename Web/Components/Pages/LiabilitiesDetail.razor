@page "/Liabilities/{Id:int}"
@using Domain.Entities
@using Application.Interface
@inject ILiabilityService LiabilityService

<MudContainer MaxWidth="MaxWidth.Medium" Class="py-4">
    @if (liability == null)
    {
        <MudProgressCircular Indeterminate="true" />
    }
    else
    {
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h4">Liability: @liability.Name</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText><b>Type:</b> @liability.Type</MudText>
                <MudText><b>Value:</b> @liability.Value.ToString("C")</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Href="/Liabilities" Variant="Variant.Text" Color="Color.Primary">Back</MudButton>
            </MudCardActions>
        </MudCard>
    }
</MudContainer>

@code {
    [Parameter] public int Id { get; set; }
    private Liability? liability;

    protected override async Task OnInitializedAsync()
    {
        liability = await LiabilityService.GetLiabilityByIdAsync(Id);
    }
}