@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-4">
    <MudCard>
        <MudCardHeader>
            <MudText Typo="Typo.h4">Counter</MudText>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body1" Class="mb-4">Current count: <strong>@currentCount</strong></MudText>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="IncrementCount">Click me</MudButton>
        </MudCardContent>
    </MudCard>
</MudContainer>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
